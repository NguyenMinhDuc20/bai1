package ShopGear.Controller.User;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.servlet.ModelAndView;

import ShopGear.Dto.PaginatesDto;
import ShopGear.Service.IPaginateService;

@Controller
public class HomeController extends Common{
	@Autowired
	IPaginateService paginateService;
	private int totalProductsPage = 8;
	@RequestMapping(value= {"/","/trang-chu"})
	public ModelAndView Home() {
		int totalData = _product.getAllProduct().size();
		PaginatesDto paginateInfo = paginateService.GetInfoPaginates(totalData, totalProductsPage, 1);
		_mvShare.addObject("paginateInfo", paginateInfo);
		_mvShare.addObject("productsPaginate", _product.GetDataProductsPaginate( paginateInfo.getStart(), totalProductsPage));
		_mvShare.addObject("products", _product.getAllProduct());
		_mvShare.setViewName("user/home/index");
			
		return _mvShare;
		
	}
	@RequestMapping(value= {"/","/trang-chu/{currentPage}"})
	public ModelAndView Home(@PathVariable int currentPage) {
		int totalData = _product.getAllProduct().size();
		PaginatesDto paginateInfo = paginateService.GetInfoPaginates(totalData, totalProductsPage, currentPage);
		_mvShare.addObject("paginateInfo", paginateInfo);
		_mvShare.addObject("productsPaginate", _product.GetDataProductsPaginate( paginateInfo.getStart(), totalProductsPage));
		_mvShare.addObject("products", _product.getAllProduct());
		_mvShare.setViewName("user/home/index");
			
		return _mvShare;
		
	}
//	@RequestMapping(value = "/san-pham/{id}")
